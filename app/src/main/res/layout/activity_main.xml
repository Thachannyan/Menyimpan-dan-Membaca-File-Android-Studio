<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
	tools:context=".MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:id="@+id/judulAplikasi"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:gravity="center"
			android:text="Aplikasi Catatan"
			android:textSize="35dp"
			android:textStyle="bold"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="10dp">

			<Button
				android:id="@+id/newFile"
				android:layout_width="150dp"
				android:layout_height="50dp"
				android:layout_marginLeft="40dp"
				android:layout_marginRight="15dp"
				android:text="File Baru"/>

			<Button
				android:id="@+id/lihatFile"
				android:layout_width="150dp"
				android:layout_height="50dp"
				android:text="Lihat File"/>

		</LinearLayout>

		<EditText
			android:id="@+id/judulFile"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginTop="20dp"
			android:hint="Judul file"
			android:background="@drawable/background"/>

		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/input_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="top"
				android:hint="Tulis catatan disini"
				android:inputType="textMultiLine"
				android:minLines="5" />
		</com.google.android.material.textfield.TextInputLayout>

		<Button
			android:id="@+id/simpanFile"
			android:layout_width="150dp"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:layout_marginTop="30dp"
			android:text="Simpan File" />
	</LinearLayout>

</RelativeLayout>